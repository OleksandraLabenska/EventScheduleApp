<?xml version="1.0" encoding="utf-8"?>


<selector
xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape android:shape="rectangle">
        <solid
            android:color="@color/light_pink" />
        <stroke
            android:width="1dp"
            android:color="@color/black" />
        <corners
            android:radius="10dp"/>

        <size android:width="200dp" android:height="50dp"/>
    </shape>
</item>


<item>
    <shape android:shape="rectangle">
        <solid
            android:color="@color/purple_btn"/>
        <stroke
            android:width="1dp"
            android:color="@color/purple_main" />
        <corners
            android:radius="10dp"/>

        <size android:width="200dp" android:height="50dp"/>
    </shape>
</item>
</selector>